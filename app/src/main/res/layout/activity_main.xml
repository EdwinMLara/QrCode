<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_scan_qr_code"/>

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nombre" />

    <TextView
        android:id="@+id/num_recibo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Num Recibo" />

    <TextView
        android:id="@+id/direccion_solicitante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Direccion Solicitante" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vigencia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegencia1"
            android:layout_weight="50"/>

        <TextView
            android:id="@+id/vigencia2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vigencia2"
            android:layout_weight="50"/>


    </LinearLayout>



</LinearLayout>